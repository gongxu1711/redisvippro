package itforstudent;

public class BT1 {
	int modelYear;
	String modelName;
	
	public BT1(int year, String name) {
		modelYear = year;
		modelName = name;
	}
	
	public static void main(String[] args) {
		BT1 car = new BT1(2019, "Volvo");
		System.out.println(car.modelName + "" + car.modelYear);
	}
	public static int sum(int k) {
		if(k > 0) {
			return k + sum(k-1);
		} else {
			return 0;
		}
	}
	
	public static int summm(int start, int end) {
		if(start < end) {
			return start + summm(start + 1, end);
		} else {
			return 0;
		}
	}
}

